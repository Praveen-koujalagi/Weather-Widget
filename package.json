{
  "name": "weather-widget-app",
  "private": true,
  "version": "1.0.0",
  "description": "A modern weather app with 15-day forecast, sunrise/sunset tracking, and beautiful UI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "deploy:netlify": "npm run build && echo 'Build complete! Upload the dist folder to Netlify'",
    "deploy:vercel": "npm run build && npx vercel --prod",
    "deploy:gh-pages": "npm run build && npx gh-pages -d dist",
    "clean": "rm -rf dist node_modules package-lock.json",
    "fresh-install": "npm run clean && npm install"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.6",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  }
}
